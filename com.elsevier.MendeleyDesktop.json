{
    "app-id": "com.elsevier.MendeleyDesktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "branch": "stable",
    "command": "mendeleydesktop",
    "separate-locales": false,
    "tags": ["proprietary"],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--filesystem=home"
    ],
    "cleanup": ["/include",
                "/lib/pkgconfig",
                "/share/pkgconfig",
                "/share/aclocal",
                "/man",
                "/share/man",
                "/share/gtk-doc",
                "/share/doc",
                "*.la",
                "*.a"],
    "modules": [
        "shared-modules/udev/udev-175.json",
        {
            "name": "mendeley",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/bin",
                "install apply_extra /app/bin",
                "install mendeleydesktop /app/bin",
                "install -Dm644 com.elsevier.MendeleyDesktop.appdata.xml /app/share/appdata/com.elsevier.MendeleyDesktop.appdata.xml",
                "install -Dm644 mendeleydesktop-64.png /app/share/icons/hicolor/64x648/apps/com.elsevier.MendeleyDesktop.png",
                "install -Dm644 mendeleydesktop-128.png /app/share/icons/hicolor/128x128/apps/com.elsevier.MendeleyDesktop.png",
                "cp /usr/bin/ar /app/bin",
                "ARCH_TRIPLE=$(gcc --print-multiarch) && cp /usr/lib/${ARCH_TRIPLE}/libbfd-*.so /app/lib"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "ar x mendeleydesktop.deb",
                        "rm -f mendeleydesktop.deb",
                        "tar xf data.tar.xz --no-same-owner",
                        "rm -f control.tar.gz data.tar.xz debian-binary",
                        "mv opt/mendeleydesktop/* .",
                        "rm -rf apt opt usr",
                        "mkdir -p export/share/applications",
                        "sed s/Icon=mendeleydesktop/Icon=com.elsevier.MendeleyDesktop/ share/applications/mendeleydesktop.desktop > export/share/applications/com.elsevier.MendeleyDesktop.desktop",
                        "echo StartupWMClass=Mendeley Desktop >> export/share/applications/com.elsevier.MendeleyDesktop.desktop"
                    ]
                },
                {
                    "type": "file",
                    "path": "mendeleydesktop"
                },
                {
                    "type": "file",
                    "path": "com.elsevier.MendeleyDesktop.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "mendeleydesktop-64.png"
                },
                {
                    "type": "file",
                    "path": "mendeleydesktop-128.png"
                },
                {
                    "type": "extra-data",
                    "filename": "mendeleydesktop.deb",
                    "only-arches": ["x86_64"],
                    "url": "https://desktop-download.mendeley.com/download/apt/pool/main/m/mendeleydesktop/mendeleydesktop_1.19.2-stable_amd64.deb",
                    "sha256": "f053b32ca1ef6dafee1593982e2d9d4265d77292b9c3cd06b56212a691f9571d",
                    "size": 123801278
                },
                {
                    "type": "extra-data",
                    "filename": "mendeleydesktop.deb",
                    "only-arches": ["i386"],
                    "url": "https://desktop-download.mendeley.com/download/apt/pool/main/m/mendeleydesktop/mendeleydesktop_1.19.2-stable_i386.deb",
                    "sha256": "a586077b5623fc80707b2886565241414a08afa92a5c458c5c790e39594bf087",
                    "size": 123230420
                }
            ]
        }
    ]
}
